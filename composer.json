{
  "name": "phpffcms/ffcms",
  "description": "FFCMS 3 version based on MVC core ffcms-core.",
  "keywords": [
    "php",
    "cms",
    "mvc",
    "framework",
    "php7",
    "pdo",
    "ffcms"
  ],
  "type": "project",
  "homepage": "https://ffcms.org",
  "license": "MIT",
  "optimize-autoloader": true,
  "require": {
    "php": ">=7.1",
    "lib-curl": "*",
    "ext-mbstring": "*",
    "ext-gd": "*",
    "ext-zip": "*",
    "phpffcms/ffcms-core": "@dev",
    "phpffcms/ffcms-console": "@dev",
    "phpffcms/searchable": "@dev",
    "phpffcms/language-flags": "1.*",
    "phpffcms/ffcms-templex": "@dev",
    "phpffcms/ffcms-ckeditor": "1.*",
    "bower-asset/jquery-validation": "1.*@stable",
    "bower-asset/popper.js": "1.*@stable",
    "studio-42/elfinder": " 2.1.*@stable",
    "twbs/bootstrap": "4.*@stable",
    "components/jquery": "3.*@stable",
    "components/jqueryui": "1.*@stable",
    "enyo/dropzone": "5.*@stable",
    "components/font-awesome": "4.*@stable",
    "tinymce/tinymce": "4.*@stable"
  },
  "authors": [
    {
      "name": "Mihail Pyatinskyi",
      "email": "zenn1989@gmail.com",
      "homepage": "http://ffcms.ru",
      "role": "Maintainer"
    }
  ],
  "config": {
    "fxp-asset": {
      "installer-paths": {
        "npm-asset-library": "vendor/npm",
        "bower-asset-library": "vendor/bower"
      }
    }
  }
}
